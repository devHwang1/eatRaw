<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/blue">

        <!-- 상단 부분 유지 -->

        <ActionMenuView
            android:id="@+id/menubar1"
            android:layout_width="412dp"
            android:layout_height="50dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/nalLo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:text="Nal Lo"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </ActionMenuView>

        <SearchView
            android:id="@+id/mainSearchbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_background"
            android:layout_margin="5dp" />

        <!-- 상단 부분 끝 -->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewBanner"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="150dp" />

        <!-- 중간 내용 추가 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Best Review"
                android:textSize="20sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewBestReview"
                android:layout_width="match_parent"
                android:layout_height="150dp" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewComparingPrice"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="150dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/menubar3"
            android:layout_width="402dp"
            android:layout_height="301.5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/menubar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="추천 어종"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/menubar4"
            android:layout_width="402dp"
            android:layout_height="301.5dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/menubar">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제철 어종"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
